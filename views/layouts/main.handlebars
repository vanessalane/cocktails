<body>
  <div class="navbar-fixed">
  <nav class="white">
    <div class="nav-wrapper">
      <a href="/" class="brand-logo yellow-text text-darken-4 hide-on-med-and-down">drink app</a>
      <a href="#" data-target="mobile-menu" class="sidenav-trigger grey-text text-darken-3"><i class="material-icons">menu</i></a>
      <ul class="right hide-on-med-and-down">
        {{#if loggedIn}}
          <li><a href="/user/{{loggedInUser}}" class="grey-text text-darken-4">logged in as {{loggedInUser}}</a></li>
          <li><a href="/recipe/add" class="grey-text text-darken-4">add a recipe</a></li>
          <li><a href="/login" class="logout grey-text text-darken-4">log out</a></li>
        {{ else }}
          <li><a href="/login" class="grey-text text-darken-4">log in or sign up</a></li>
        {{/if}}
      </ul>
    </div>
  </nav>
  </div>

  <ul class="sidenav" id="mobile-menu">
    <li><a href="/" class="yellow-text text-darken-4"><h5>drink app</h5></a></li>
    {{#if loggedIn}}
      <li><a href="/user/{{loggedInUser}}" class="grey-text text-darken-4">logged in as {{loggedInUser}}</a></li>
      <li><a href="/recipe/add" class="grey-text text-darken-4">add a recipe</a></li>
      <li><a href="/login" class="logout grey-text text-darken-4">log out</a></li>
    {{ else }}
      <li><a href="/login" class="grey-text text-darken-4">log in or sign up</a></li>
    {{/if}}
    </li>
  </ul>

  <main class="blue-grey lighten-5">
    {{#unless no_hero}}
      {{#if big_hero}}
      <div class="hero-container big-hero valign-wrapper blue-grey darken-4">
          <div class="hero-content-container valign-wrapper">
            <div class="hero-content hero-title">
              <h2 class="grey-text text-lighten-4 center-align">{{ hero_eyebrow }}</h2>
              <h1 class="yellow-text text-darken-3 center-align hero-title">{{ hero_title }}</h2>
            </div>
          </div>
      </div>
      {{else}}
      <div class="hero-container small-hero valign-wrapper blue-grey darken-4">
          <div class="hero-content-container valign-wrapper">
            <div class="hero-content hero-title">
              <h4 class="grey-text text-lighten-4 center-align">{{ hero_eyebrow }}</h4>
              <h2 class="yellow-text text-darken-3 center-align hero-title">{{ hero_title }}</h2>
            </div>
          </div>
      </div>
      {{/if}}
    {{/unless}}

    <div class="container body-content" id="body">
      {{{ body }}}
    </div>
  </main>

  <footer class="page-footer blue-grey lighten-4">
    <div class="container">
      <div class="row margin-bottom center-align">
          <h5 class="grey-text text-darken-4">Get in Touch</h5>
          <div class="col s12 l4">
            <ul>
              <li><a class="grey-text text-darken-4" href="https://github.com/vanessalane" target="_blank">Vanessa Lane</a></li>
              <li><a class="grey-text text-darken-4" href="mailto:vlane0593@gmail.com" target="_blank">vlane0593@gmail.com</a></li>
